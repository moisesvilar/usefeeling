<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_botton"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.usefeeling.android.cabinstill.widgets.NeuropolTextView
                android:id="@+id/tvLastCheckinTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:background="@color/usefeeling_green"
                android:drawablePadding="@dimen/margin_top"
                android:gravity="center_horizontal"
                android:padding="@dimen/margin"
                android:text="@string/welcome_to_usefeeling"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
                android:id="@+id/tvNewUserTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="center"
                android:text="@string/are_you_new"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvInfoCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColorLink="@color/dark_red"
                android:textSize="12sp"
                android:textStyle="italic"
                android:visibility="gone" />

            <Button
                android:id="@+id/bCreateAccount"
                style="@style/UseFeelingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:onClick="bCreateAccount_OnClick"
                android:text="@string/create_account" />

            <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
                android:id="@+id/oldUserTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="center"
                android:text="@string/are_you_member"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/bLogin"
                style="@style/UseFeelingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:onClick="bLogin_OnClick"
                android:text="@string/log_in" />

            <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
                android:id="@+id/whatIsUseFeelingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:background="@color/green_yellow"
                android:gravity="center"
                android:text="@string/what_is_usefeeling_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold|italic" />

            <com.usefeeling.android.cabinstill.widgets.MolengoTextView
                android:id="@+id/tvWhatsUseFeeling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="start|end"
                android:text="@string/what_is_usefeeling"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="italic" />

        </LinearLayout>

</ScrollView>