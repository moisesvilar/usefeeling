<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_botton"
    android:layout_marginLeft="@dimen/margin_left"
    android:layout_marginRight="@dimen/margin_right"
    android:layout_marginTop="@dimen/margin_top"
    android:baselineAligned="false"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/qcbIcon"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image_content_description"
                android:scaleType="centerCrop"
                android:src="@drawable/default_portrait" />
            
            <ImageView
                android:id="@+id/ivAffinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_bottom"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image_content_description"
                android:scaleType="fitXY"
                android:src="@drawable/red_circle" />

            <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
                android:id="@+id/tvPromoName"
                style="@style/ShadowTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/qcbIcon"
                android:layout_alignLeft="@+id/qcbIcon"
                android:layout_alignRight="@+id/qcbIcon"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="28sp" />
        </RelativeLayout>
        
    	<com.usefeeling.android.cabinstill.widgets.MolengoTextView
            android:id="@+id/tvPlaceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="bottom|right"
            android:paddingRight="@dimen/padding_right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textIsSelectable="false" />
    	
    	<com.usefeeling.android.cabinstill.widgets.MolengoTextView
            android:id="@+id/tvDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="bottom|right"
            android:paddingRight="@dimen/padding_right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textIsSelectable="false" />

        <com.usefeeling.android.cabinstill.widgets.MolengoTextView
            android:id="@+id/tvInitTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="bottom|right"
            android:paddingRight="@dimen/padding_right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textIsSelectable="false" />

        <com.usefeeling.android.cabinstill.widgets.MolengoTextView
            android:id="@+id/tvEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="bottom|right"
            android:paddingRight="@dimen/padding_right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textIsSelectable="false" />

</LinearLayout>