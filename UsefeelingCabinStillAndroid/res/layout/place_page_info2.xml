<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/placeImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_content_description"
                android:scaleType="fitXY"
                android:src="@drawable/default_portrait" />
            
            <ImageView
                android:id="@+id/ivAffinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_bottom"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image_content_description"
                android:scaleType="fitXY"
                android:src="@drawable/red_circle" />

            <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
                android:id="@+id/placeName"
                style="@style/ShadowTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/placeImage"
                android:layout_alignLeft="@+id/placeImage"
                android:layout_alignRight="@+id/placeImage"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="28sp" />
        </RelativeLayout>

        <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
            android:id="@+id/placeType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_top"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/padding_right"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
            android:id="@+id/titleNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_left"
            android:text="@string/navigation"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/ivMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/image_content_description"
            android:scaleType="centerInside"
            android:src="@drawable/map" />

        <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
            android:id="@+id/titleDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_left"
            android:text="@string/description"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.usefeeling.android.cabinstill.widgets.MolengoTextView
            android:id="@+id/placeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/double_margin"
            android:paddingRight="@dimen/margin_right"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
            android:id="@+id/titleAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:text="@string/address"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.usefeeling.android.cabinstill.widgets.MolengoTextView
            android:id="@+id/placeAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="map"
            android:clickable="false"
            android:paddingLeft="@dimen/double_margin"
            android:paddingRight="@dimen/margin_right"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
            android:id="@+id/titlePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:text="@string/phone"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.usefeeling.android.cabinstill.widgets.MolengoTextView
            android:id="@+id/placePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/double_margin"
            android:paddingRight="@dimen/margin_right"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
            android:id="@+id/titleEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:text="@string/email"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.usefeeling.android.cabinstill.widgets.MolengoTextView
            android:id="@+id/placeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:paddingLeft="@dimen/double_margin"
            android:paddingRight="@dimen/margin_right"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
            android:id="@+id/titleWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:text="@string/web"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.usefeeling.android.cabinstill.widgets.MolengoTextView
            android:id="@+id/placeWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:paddingLeft="@dimen/double_margin"
            android:paddingRight="@dimen/margin_right"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
            android:id="@+id/titleFollowUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:text="@string/follow_us"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/placeFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/double_margin"
                android:clickable="true"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/fb_logo" />

            <ImageView
                android:id="@+id/placeTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/double_margin"
                android:clickable="true"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/twitter_logo" />

        </LinearLayout>
        
        <com.usefeeling.android.cabinstill.widgets.OrbitronTextView
            android:id="@+id/titleFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/padding_left"
            android:text="@string/favorites"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.usefeeling.android.cabinstill.widgets.NeuropolTextView
            android:id="@+id/placeFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_top"
            android:paddingLeft="@dimen/double_margin"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

</ScrollView>
